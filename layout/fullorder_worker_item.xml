<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/fullorder_item_color_worker"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/status_shape_red"
        android:gravity="center"
        android:orientation="horizontal"
        android:paddingVertical="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/textViewNumWorker"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:fontFamily="@font/oswald_bold"
            android:text="Номер заказа"
            android:textAlignment="textEnd"
            android:textColor="@color/white"
            android:textSize="20dp"
            android:layout_weight="2"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textViewStatusWorker"
            android:layout_width="130dp"
            android:layout_height="wrap_content"
            android:fontFamily="@font/oswald_bold"
            android:text="Статус"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="20dp"
            android:layout_weight="1"
            android:textStyle="bold" />

    </LinearLayout>

    <Button
        android:id="@+id/buttonAcceptWorker"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingHorizontal="50dp"
        android:paddingVertical="20dp"
        android:layout_marginHorizontal="10dp"
        android:background="@drawable/border_acc"
        android:text="Подтвердить"
        android:textColor="@color/white"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/fullorder_item_color_worker" />

</androidx.constraintlayout.widget.ConstraintLayout>