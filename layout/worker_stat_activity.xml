<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/textViewTitleWorkers"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:textAlignment="center"
        android:fontFamily="@font/oswald_bold"
        android:text="Статистика ресторана"
        android:textColor="@color/black"
        android:textSize="25dp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:gravity="center"
        android:orientation="vertical"
        android:paddingHorizontal="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewTitleWorkers">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal"
            android:paddingVertical="5dp">

            <TextView
                android:id="@+id/workCountOrder"
                android:layout_width="500dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="@font/oswald"
                android:gravity="center"
                android:paddingHorizontal="10dp"
                android:text="Кол-во обработанных заказов: "
                android:textColor="@color/black"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/workCountOrderValue"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="@font/oswald"
                android:gravity="center"
                android:text="0"
                android:textColor="@color/black"
                android:textSize="20dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal"
            android:paddingVertical="5dp">

            <TextView
                android:id="@+id/workCountPizza"
                android:layout_width="500dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="@font/oswald"
                android:gravity="center"
                android:paddingHorizontal="10dp"
                android:text="Кол-во проданной пиццы: "
                android:textColor="@color/black"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/workCountPizzaValue"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="@font/oswald"
                android:gravity="center"
                android:text="0"
                android:textColor="@color/black"
                android:textSize="20dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal"
            android:paddingVertical="5dp">

            <TextView
                android:id="@+id/workCountRefregs"
                android:layout_width="500dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="@font/oswald"
                android:gravity="center"
                android:paddingHorizontal="10dp"
                android:text="Кол-во проданной закуски: "
                android:textColor="@color/black"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/workCountRefregsValue"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="@font/oswald"
                android:gravity="center"
                android:text="0"
                android:textColor="@color/black"
                android:textSize="20dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal"
            android:paddingVertical="5dp">

            <TextView
                android:id="@+id/workCountDesert"
                android:layout_width="500dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="@font/oswald"
                android:gravity="center"
                android:paddingHorizontal="10dp"
                android:text="Кол-во проданных десертов: "
                android:textColor="@color/black"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/workCountDesertValue"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="@font/oswald"
                android:gravity="center"
                android:text="0"
                android:textColor="@color/black"
                android:textSize="20dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal"
            android:paddingVertical="5dp">

            <TextView
                android:id="@+id/workCountDrink"
                android:layout_width="500dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="@font/oswald"
                android:gravity="center"
                android:paddingHorizontal="10dp"
                android:text="Кол-во проданных напитков: "
                android:textColor="@color/black"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/workCountDrinkValue"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="@font/oswald"
                android:gravity="center"
                android:text="0"
                android:textColor="@color/black"
                android:textSize="20dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal"
            android:paddingVertical="5dp">

            <TextView
                android:id="@+id/workCountUsers"
                android:layout_width="500dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="@font/oswald"
                android:gravity="center"
                android:paddingHorizontal="10dp"
                android:text="Кол-во зарегистрированных пользователей: "
                android:textColor="@color/black"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/workCountUsersValue"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="@font/oswald"
                android:gravity="center"
                android:text="0"
                android:textColor="@color/black"
                android:textSize="20dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal"
            android:paddingVertical="5dp">

            <TextView
                android:id="@+id/workCountUsersOrders"
                android:layout_width="500dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="@font/oswald"
                android:gravity="center"
                android:paddingHorizontal="10dp"
                android:text="Кол-во зарегистрированных пользователей, имеющих заказы: "
                android:textColor="@color/black"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/workCountUsersOrdersValue"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="@font/oswald"
                android:gravity="center"
                android:text="0"
                android:textColor="@color/black"
                android:textSize="20dp" />
        </LinearLayout>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>