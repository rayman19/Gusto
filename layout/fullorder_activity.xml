<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/textViewName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/oswald_bold"
        android:text="Номер"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="25dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ListView
        android:id="@+id/fullorder_list"
        android:layout_width="match_parent"
        android:layout_height="420dp"
        android:paddingVertical="20dp"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewName">

    </ListView>

    <TextView
        android:id="@+id/textViewFull"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="150dp"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/oswald_bold"
        android:text="Итог: "
        android:textColor="@color/black"
        android:textSize="28dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/fullorder_list" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/lin1"
        android:layout_marginTop="20dp"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@+id/textViewFull">

        <TextView
            android:id="@+id/textViewPay"
            android:layout_width="125dp"
            android:layout_height="wrap_content"
            android:fontFamily="@font/oswald"
            android:text="Оплата"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/textViewSend"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:fontFamily="@font/oswald"
            android:text="Доставка"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/textViewFullStatus"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/oswald"
            android:text="Статус"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="20dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/lin2"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@+id/lin1">

        <TextView
            android:id="@+id/textViewPaySel"
            android:layout_width="125dp"
            android:layout_height="wrap_content"
            android:fontFamily="@font/oswald"
            android:text="Оплата"
            android:textAlignment="center"
            android:textSize="18dp" />

        <TextView
            android:id="@+id/textViewSendSel"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:fontFamily="@font/oswald"
            android:text="Доставка"
            android:textAlignment="center"
            android:textSize="18dp" />

        <TextView
            android:id="@+id/textViewStatusSel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/oswald"
            android:text="Статус"
            android:textAlignment="center"
            android:textSize="18dp" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>